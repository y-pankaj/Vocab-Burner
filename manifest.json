{
  "name": "Japanese Vocab",
  "description" : "This extension helps you remember the vocabulary that you have learnt by substuting a word in english to its equivalent word in japanese",
  "version": "0.0",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.jpg"
    },
    "default_title": "Learn Japanese",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["contentScript.js"]
    }
  ]
}